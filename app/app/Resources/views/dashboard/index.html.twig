{% extends 'base-admin.html.twig' %}

{% block body %}

    <div class="right_col" role="main">
        <div class="">
            <div class="page-title">
                <div class="title_left">
                    <h3>Social Photos dashboard</h3>
                </div>
            </div>

            <div class="clearfix"></div>

            <div class="row">
                <div class="col-xs-3">
                    <div class="x_panel">
                        <div class="x_title">
                            <h2>Popular tags among your friends</h2>
                            <div class="clearfix"></div>
                        </div>
                        <div class="x_content">
                            {% for tag, occurrence in tagOccurrences %}

                                <p><strong>{{ tag }}</strong> - {{ occurrence }} times</p>

                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
